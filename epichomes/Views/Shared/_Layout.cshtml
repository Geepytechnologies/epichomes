<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Epichomes</title>
@*     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
 *@    
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
 <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/datepickerstyles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/images/houseicon.png">
    @*<link rel="stylesheet" href="~/epichomes.styles.css" asp-append-version="true" />*@
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
     <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,700;1,400;1,700&family=Montserrat:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Poppins:ital,wght@0,400;0,500;0,600;1,400;1,500;1,600&family=Roboto:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap" rel="stylesheet">
    
    
</head>
<body>
    <div class="container">
        <header>
            <nav class="headercon">
                <a class="myheadertext" asp-area="" asp-controller="Home" asp-action="Index">Epichomes</a>
                <ul class="mymenu">
                    <li>
                        <a class="" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a class="" asp-area="" asp-controller="About" asp-action="Index">About</a>
                    </li>
                    <li>
                        <a class="" asp-area="" asp-controller="Rooms" asp-action="Index">Rooms</a>
                    </li>
                    <li>
                        <a class="" asp-area="" asp-controller="Restaurant" asp-action="Index">Restaurant</a>
                    </li>
                    <li>
                        <a class="" asp-area="" asp-controller="Contacts" asp-action="Index">Contacts</a>
                    </li>
                </ul>
                <div class="menunum">
                    <p>+1 002 132 444</p>
                    <div class="menuicon">

                        <i class="fa fa-bars menuicon" aria-hidden="true"></i>
                    </div>
                </div>

            </nav>
            <div class="headercontent">
                <div class="contentcon">
                    <h1 class="slogan">Beyond Hospitality, It's a Lifestyle.</h1>
                    <h2 class="c2a">Find your perfect stay with ease and explore a wide range of rooms. Book your Ideal gateway to Luxury </h2>

                </div>
                <div class="bookingcon">
                    <div class="booking">
                        <div class="bookingoption">
                            <div class="bookingselection">
                                <ion-icon name="location-outline"></ion-icon>
                                <p>Location <i class="fa fa-angle-down" aria-hidden="true"></i></p>
                            </div>
                            <input class="datepickerinput" placeholder="where are you going?" type="text">

                        </div><div class="bookingoption">
                            <div class="bookingselection">
                                <ion-icon name="calendar-outline"></ion-icon>
                                <p>Check In <i class="fa fa-angle-down" aria-hidden="true"></i></p>
                            </div>
                            <input class="datepickerinput" type="text" id="datepicker">

                        </div>
                        <div class="bookingoption">
                            <div class="bookingselection">
                                <ion-icon name="calendar-outline"></ion-icon>
                                <p>Check Out <i class="fa fa-angle-down" aria-hidden="true"></i></p>
                            </div>
                            <input class="datepickerinput" type="text" id="datepicker2">
                        </div>
                        <div class="bookingoption">
                            <div class="bookingselection">
                                <ion-icon name="person-outline"></ion-icon>
                                <p>Persons <i class="fa fa-angle-down" aria-hidden="true"></i></p>
                            </div>
                            <select class="persons">
                                <option>1 person</option>
                                <option>2 persons</option>
                            </select>
                        </div>
                        <div class="book">
                            Book Now
                        </div>
                    </div>
                </div>

            </div>
        </header>
        @*body*@
        <div class="bodycontent">
            <main role="main" class="">
                @RenderBody()
            </main>
        </div>

        @*footer*@
        <footer class="footer">
            <a class="myheadertext" asp-area="" asp-controller="Home" asp-action="Index">Epichomes</a>
            <div class="socials">
                <i class="fa fa-twitter-square" aria-hidden="true"></i>
                <i class="fa fa-instagram" aria-hidden="true"></i>
                <i class="fa fa-linkedin-square" aria-hidden="true"></i>
            </div>

            <div class="">
                &copy; @DateTime.Now.Year - Epichomes - All rights reserved <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

    </div>

@*    <script src="~/lib/jquery/dist/jquery.min.js"></script>
 *@ @*     <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
 *@    
 <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/49ed5cb50f.js" crossorigin="anonymous"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
